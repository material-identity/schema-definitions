          "title": "ProductDescriptionSupplementaryInformation",
          "type": "object",
          "propertyNames": {
            "pattern": "^B1[4-9]|^B[2-9][0-9]"
          },
          "patternProperties": {
            "^B1[4-9]|^B[2-9][0-9]": {
              "$ref": "../key-value-object.json#/definitions/KeyValueObject"
            }
          },
          "additionalProperties": false

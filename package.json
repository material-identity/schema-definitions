{
  "name": "schema-definitions",
  "version": "0.0.2",
  "description": "A repository containing schema definitions that can be shared across multiple schemas.",
  "main": "index.js",
  "scripts": {
    "lint:staged": "lint-staged",
    "test": "jest --runInBand",
    "format": "prettier --write \"**/*.{js,json}\"",
    "set-local-paths": "node utils/set-local-paths",
    "update:version": "node utils/update-version",
    "release": "read -p 'GITHUB_TOKEN: ' GITHUB_TOKEN && export GITHUB_TOKEN=$GITHUB_TOKEN && release-it",
    "release:dry-run": "read -p 'GITHUB_TOKEN: ' GITHUB_TOKEN && export GITHUB_TOKEN=$GITHUB_TOKEN && release-it --dry-run",
    "lint": "eslint ./*.js",
    "create:definition": "node utils/create-definition.js",
    "postinstall": "husky install"
  },
  "release-it": {
    "github": {
      "release": true,
      "requireBranch": "main"
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "npm run lint"
      ],
      "after:bump": "npm run update:version -- v${version} -s true -c true",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thematerials-network/schema-definitions.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thematerials-network/schema-definitions/issues"
  },
  "homepage": "https://github.com/thematerials-network/schema-definitions#readme",
  "devDependencies": {
    "@s1seven/schema-tools-utils": "^0.1.2",
    "@s1seven/schema-tools-versioning": "^0.2.3",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "prettier": "^2.7.1",
    "release-it": "^15.4.1",
    "yargs": "^17.5.1"
  }
}
